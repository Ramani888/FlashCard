# FlashCard Environment Configuration
# Copy this file to .env and fill in your values

# API Configuration
API_BASE_URL=https://biblestudycards.app/api

# Environment
NODE_ENV=development

# Google AdMob (Replace with your actual IDs)
ADMOB_ANDROID_APP_ID=ca-app-pub-xxxxxxxxxxxxx~xxxxxxxxxx
ADMOB_IOS_APP_ID=ca-app-pub-xxxxxxxxxxxxx~xxxxxxxxxx
ADMOB_BANNER_ID=ca-app-pub-xxxxxxxxxxxxx/xxxxxxxxxx
ADMOB_INTERSTITIAL_ID=ca-app-pub-xxxxxxxxxxxxx/xxxxxxxxxx
ADMOB_REWARDED_ID=ca-app-pub-xxxxxxxxxxxxx/xxxxxxxxxx

# Firebase (optional - usually configured via google-services.json)
# FIREBASE_API_KEY=
# FIREBASE_PROJECT_ID=

# Feature Flags
ENABLE_ADS=true
ENABLE_IN_APP_PURCHASES=true
ENABLE_OFFLINE_MODE=true
